{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for front end projects",
  "keywords": [
    "sass",
    "scss",
    "styles",
    "css",
    "boilerplate"
  ],
  "author": "Chris W. Burke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "github.com/chriswburke/frontend-boilerplate"
  },
  "scripts": {
    "build": "./bin/build.sh",
    "build:production": "./bin/build.sh production",
    "test": "npm run build",
    "clean": "node ./bin/tasks/clean",
    "assemble": "node ./bin/tasks/assemble",
    "sass": "node ./bin/tasks/sass",
    "sassdoc": "sassdoc src/sass -d docs",
    "serve": "node ./bin/tasks/serve",
    "images": "node ./bin/tasks/images",
    "webpack": "node ./bin/tasks/webpack",
    "watch": "npm-watch",
    "preinstall": "./bin/setup.sh",
    "postinstall": "&& npm run build:production",
    "start": "node ./bin/tasks/serve",
    "deploy": "./bin/deploy.sh dev || true",
    "deploy:qa": "./bin/deploy.sh qa || true",
    "deploy:staging": "./bin/deploy.sh staging || true"
  },
  "watch": {
    "sass": {
      "patterns": [
        "src/sass/**/*"
      ],
      "extensions": "sass,scss",
      "quiet": false
    },
    "webpack": {
      "patterns": [
        "src/js/**/*"
      ],
      "extensions": "js",
      "quiet": false
    },
    "images": {
      "patterns": [
        "src/images/**/*"
      ],
      "extensions": "jpg,jpeg,png,svg,gif",
      "quiet": false
    },
    "assemble": {
      "patterns": [
        "src/templates/**/*"
      ],
      "extensions": "hbs,json",
      "quiet": false
    }
  },
  "dependencies": {
    "assemble": "^0.16.2",
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.13.0",
    "copy": "^0.3.0",
    "copyfiles": "^1.0.0",
    "fs-extra": "^0.30.0",
    "handlebars-helpers": "^0.7.3",
    "imagemin": "^5.2.2",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-optipng": "^5.1.1",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.1.0",
    "jquery": "^3.1.0",
    "map-stream": "0.0.6",
    "node-sass": "^3.8.0",
    "npm-watch": "^0.1.5",
    "onchange": "^2.5.0",
    "plur": "^2.1.2",
    "pretty-bytes": "^3.0.1",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.8.2",
    "sassdoc": "^2.1.20",
    "sprity": "^1.0.8",
    "sprity-sass": "^1.0.4",
    "superstatic": "^4.0.3",
    "through2-concurrent": "^1.1.1",
    "vinyl-fs": "^2.4.3",
    "webpack": "^1.13.1"
  }
}
